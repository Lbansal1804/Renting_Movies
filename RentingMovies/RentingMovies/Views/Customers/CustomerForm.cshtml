@model RentingMovies.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@*@Html.BeginForm("Create", "Customers")*@
@* Here Pass NAme Of Target Action.
    Action: Create
    Controller: Customers
    IT WILL ONLY BE CALLED ONCE POST D FORM
*@




@*using is used to know get d CLOSING tag for d form as well.*@
@using (@Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DateOfBirth)
        @Html.TextBoxFor(m => m.Customer.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    @*when rendering Check box we need to follow slightly differrnt MArkUp*@
    @*<div class="form-group">
            @Html.LabelFor(m => m.IsSubscribedToNewsletter)
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new { @class = "form-control" })
        </div>
    *@



    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "name"), "Select Membership Type", new { @class = "form-control" })
    </div>


    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>

    @Html.HiddenFor(m => m.Customer.Id);

    <button type="submit" class="btn btn-primary">Save</button>

}